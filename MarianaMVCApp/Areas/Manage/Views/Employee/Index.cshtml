@using MarianaMVCApp.Models;
@model IEnumerable<Employee>
@{
    int count = 1;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Striped Table</h4>
            <p class="card-description">
                Add class <code>.table-striped</code>
            </p>
            <a asp-action="Create" asp-controller="Employee"><i class="btn btn-success">Create</i></a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Count
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                FullName
                            </th>
                            <th>
                                Position
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @(count++)
                                </td>
                                <td class="py-1">
                                    <img src="~/assets/images/timeline/@item.Image" alt="image" />
                                </td>
                                <td>
                                    @item.FullName
                                </td>
                                <td>
                                    @item.Position
                                </td>
                                <td>
                                    <a asp-action="Update" asp-controller="Employee" asp-route-id="@item.Id"><i class="btn btn-warning mdi mdi-update"></i></a>
                                </td>
                                <td>
                                    <a asp-action="Delete" asp-controller="Employee" asp-route-id="@item.Id"><i class="btn btn-danger mdi mdi-delete"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>